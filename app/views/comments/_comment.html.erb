<div id="<%= dom_id comment %>">
  <p>
    <strong><%= comment.user.username %></strong>
    <%= time_ago_in_words(comment.created_at) %> ago <br>
    <%= comment.text %> <br>
    <%= link_to "Edit", edit_comment_path(comment) %>
    <%= button_to "Delete", comment, method: :delete %>
  </p>

</div>
