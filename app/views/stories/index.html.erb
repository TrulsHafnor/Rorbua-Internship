<p style="color: green"><%= notice %></p>

<div id="stories" class="feed_stories_container">
  <div class="container">
    <% @stories.each do |story| %>
      <%= link_to story do%>

        <div class="row">

          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <!-- <img src="..." class="img-fluid rounded-start" alt="..."> -->
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= story.title %></h5>
                  <p class="card-text" ><%= story.description %></p>
                  <p class="card-text" ><small class="text-muted">Uploaded <%= story.created_at %></small></p>
                </div>
              </div>
            </div>
          </div>

        </div>

      <% end %>
    <% end %>
  </div>

</div>
