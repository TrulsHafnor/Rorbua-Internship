<div id="<%= dom_id story %>">
  <p>
    <strong>Title:</strong>
    <%= story.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= story.description %>
  </p>

  <p>
    <audio controls>
      <source src="<%= rails_blob_url(story.story_file) %>">
      Your browser does not support the audio element.
    </audio>
  </p>

</div>
